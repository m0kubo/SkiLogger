<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_chart_value"
        style="@style/SubjectText"
        />
    <TextView
        android:id="@+id/tv_keywords"
        android:layout_width="wrap_content"
        style="@style/CommentText"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:padding="1dp"
                android:scaleType="centerCrop"
                android:layout_gravity="end"
                android:background="@color/orange"/>
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        android:text="@string/fmt_count_summaries"
        android:textSize="@dimen/text_size_regular"
        style="@style/SubjectText"
        />

    <!--<include layout="@layout/inc_footer" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back"
            android:src="@mipmap/ic_settings_white_48dp"
            android:background="@drawable/bg_circle_medium"
            style="@style/ActionButton" />
        <ImageButton
            android:id="@+id/btn_chart1"
            android:src="@mipmap/ic_timeline_white_36dp"
            android:background="@drawable/bg_circle_medium"
            style="@style/ActionButton" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_tag"
            android:src="@mipmap/ic_search_white_48dp"
            android:background="@drawable/bg_circle_medium"
            style="@style/ActionButton" />

        <ImageButton
            android:id="@+id/btn_detail"
            android:src="@mipmap/ic_collections_white_48dp"
            android:background="@drawable/bg_circle_medium"
            style="@style/ActionButton" />

    </LinearLayout>


</LinearLayout>
