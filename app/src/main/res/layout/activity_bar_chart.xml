<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_chart_value"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/SubjectText"
            />
        <!--<TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:text="@string/fmt_count_summaries"
            style="@style/SubjectText"
            />-->
    </LinearLayout>
    <TextView
        android:id="@+id/tv_keywords"
        android:layout_width="wrap_content"
        style="@style/CommentText"
        />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bar_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="3dp"/>

    <!--<include layout="@layout/inc_footer" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="14dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back"
            android:src="@mipmap/ic_settings_white_48dp"
            android:background="@drawable/bg_circle_medium"
            style="@style/ActionButton" />
        <ImageButton
            android:id="@+id/btn_chart1"
            android:src="@mipmap/ic_timeline_white_36dp"
            android:background="@drawable/bg_circle_medium"
            style="@style/ActionButton" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_tag"
            android:src="@mipmap/ic_search_white_48dp"
            android:background="@drawable/bg_circle_medium"
            style="@style/ActionButton" />

        <ImageButton
            android:id="@+id/btn_detail"
            android:src="@mipmap/ic_collections_white_48dp"
            android:background="@drawable/bg_circle_medium"
            style="@style/ActionButton" />

    </LinearLayout>


</LinearLayout>
